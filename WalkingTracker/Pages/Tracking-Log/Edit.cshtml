@page
@model WalkingTracker.Pages.Tracking_Log.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TrackingLog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrackingLog.ID" />
            <div class="form-group">
                <label asp-for="TrackingLog.Date" class="control-label"></label>
                <input asp-for="TrackingLog.Date" class="form-control" />
                <span asp-validation-for="TrackingLog.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrackingLog.Distance" class="control-label"></label>
                <input asp-for="TrackingLog.Distance" class="form-control" />
                <span asp-validation-for="TrackingLog.Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
